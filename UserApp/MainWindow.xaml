<Window x:Class="UserApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Email" Margin="5" FontWeight="Bold"/>
            <TextBox x:Name="EmailTextBox" Width="200" Margin="5"/>

            <Button x:Name="LoginButton" Click="LoginButton_Click" Width="200" Content="Login" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
